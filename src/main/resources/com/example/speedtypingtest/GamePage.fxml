<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.speedtypingtest.GamePageController">
   <children>
      <VBox alignment="CENTER" layoutX="135.0" layoutY="50.0" prefHeight="300.0" prefWidth="330.0" spacing="15.0">
         <children>
            <Label fx:id="levelLabel" text="Level: "/>
            <Label fx:id="remainingWord" text="Words Left: 15"/>
            <Label fx:id="wordLabel" text="Type this word:"/>
            <TextField fx:id="wordField" onAction="#handleWordView" promptText="Enter the word"/>
            <Label fx:id="remainTimeLabel" text="Remaining Time: "/>
            <Button fx:id="startButton" text="Restart Game" onAction="#startGame"/>
            <Button fx:id="backButton" text="Back to Main Menu" onAction="#handleBack"/>
         </children>
      </VBox>
   </children>
</AnchorPane>
